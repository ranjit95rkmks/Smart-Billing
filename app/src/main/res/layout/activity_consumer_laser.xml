<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Consumer">

<ImageView
    android:id="@+id/imageViewLogo"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:src="@drawable/logo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:contentDescription="বাঙ্গালদেশ পল্লী বিদ্যুতায়ন বোর্ড"/>

<EditText
android:id="@+id/current_b"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/imageViewLogo"
android:layout_marginTop="20dp"
android:hint="Book No"
android:inputType="number" />

<EditText
android:id="@+id/current_c"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/current_b"
android:layout_marginTop="10dp"
android:hint="Account number"
android:inputType="number" />

<Button
android:id="@+id/con_details"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/current_c"
android:layout_marginTop="20dp"
android:text="Consumer Detail Show" />

    </RelativeLayout>